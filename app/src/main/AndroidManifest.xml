<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mousa.muhammad.muhammadmyfinalproject">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ManagerActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".AddWorkerActivity" />
        <activity android:name=".ScheduleActivity" />
        <activity android:name=".MyWorkersActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".DetailsActivity"
            android:label="My Details"
            android:parentActivityName=".ScheduleActivity" />
        <activity
            android:name=".CouponActivity"
            android:label="Month Coupon"
            android:parentActivityName=".ScheduleActivity" />
        <activity
            android:name=".MyProfileActivity"
            android:label="My Profile"
            android:parentActivityName=".ScheduleActivity" />
        </application>
</manifest>