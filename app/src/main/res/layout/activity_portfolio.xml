<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PortfolioActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <TextView
                android:id="@+id/tvWorkerPortfolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:text="@string/worker_portfolio"
                android:textColor="#0489B1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginLeft="100dp"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivWorker"
                android:layout_width="185dp"
                android:layout_height="89dp"
                android:baselineAligned="false"
                android:contentDescription="@string/todo"
                app:layout_constraintBottom_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="0dp"
                android:layout_gravity="left"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <TextView
                android:id="@+id/tvWorkerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worker Name"
                android:textSize="18sp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="left"
                tools:text="Worker Name:" />

            <EditText
                android:id="@+id/edtWorkerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Worker Name"
                android:layout_marginLeft="0dp"
                android:layout_gravity="left"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvWorkerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worker Id"
                android:layout_marginLeft="0dp"
                android:layout_gravity="left"
                android:textSize="18sp"
                tools:text="Worker Id:" />

            <EditText
                android:id="@+id/edtWorkerId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="0dp"
                android:layout_gravity="left"
                android:hint="Worker Id"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvWorkerBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worker Birthday:"
                android:textSize="18sp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="left"
                tools:text="Worker Birthday:" />

            <EditText
                android:id="@+id/edtWorkerBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Worker Birthday"
                android:layout_marginLeft="0dp"
                android:layout_gravity="left"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvVactionDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vaction Days:"
                android:textSize="18sp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="left"
                tools:text="Vaction Days:" />

            <EditText
                android:id="@+id/edtVactionDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Vaction Days"
                android:layout_marginLeft="0dp"
                android:layout_gravity="left"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/tvWorkingDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Working Days:"
                android:textSize="18sp"
                android:layout_marginLeft="0dp"
                android:layout_gravity="left"
                tools:text="Working Days:" />

            <EditText
                android:id="@+id/edtWorkingDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Working Days"
                android:layout_marginLeft="0dp"
                android:layout_gravity="left"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Details" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>